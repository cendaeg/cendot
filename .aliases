# Git log find by commit message
function glf() { git log --all --grep="$1"; }

function note() {
  filename=$(basename "$1")
  extension="${filename##*.}"
  filename="${filename%.*}"
  cp ~/bin/pandoc/pandoc.css pandoc.css;
  pandoc -s --mathjax $1 -o "${filename}.html" -c pandoc.css;
}

